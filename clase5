int main()
{
    float legajo[5];
    float salario[5];
    int edad[5];
    int i;

    for(i=0; i<5; i++)
    {
        printf("ingrese el numero de legajo");
        scanf("%f", &legajo[i]);

        printf("ingrese la edad");
        scanf("%d", &edad[i]);

        printf("ingrese el salario");
        scanf("%f", &salario[i]);
    }
    for(i=0; i<5; i++)
    {
        printf("el numero de legajo es %.4f, la edad es %d, el salario es %.3f\n", legajo[i], edad[i], salario[i]);
    }



    return 0;
}
